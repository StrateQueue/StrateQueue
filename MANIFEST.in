# Include important documentation files
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include .gitignore

# Include example strategies and configuration files
recursive-include examples *.py *.txt *.md
recursive-include src *.py

# Exclude development and build artifacts
exclude *.log
exclude *.html
exclude .env
exclude .env.*

# Exclude common development directories
prune .git
prune .github
prune __pycache__
prune *.egg-info
prune build
prune dist
prune .pytest_cache
prune .mypy_cache
prune .tox

# Exclude IDE files
prune .vscode
prune .idea
exclude .DS_Store 